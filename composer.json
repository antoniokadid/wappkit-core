{
    "name": "antoniokadid/wapp-kit-core",
    "description": "The core of web application kit",
    "type": "library",
    "authors": [
        {
            "name": "Antonio Kadid",
            "email": "antoniokadid@gmail.com",
            "homepage": "http://www.antoniokadid.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.3",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "suggest": {
        "ext-gd": "Required for Graphics",
        "ext-pdo": "Required for using PDO Connection",
        "ext-mysqli": "Required for using MySQLi Connection"
    },
    "autoload": {
        "psr-4": {
            "AntonioKadid\\WAPPKitCore\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AntonioKadid\\WAPPKitCore\\": "src/",
            "AntonioKadid\\WAPPKitCore\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --testdox tests"
    }
}
