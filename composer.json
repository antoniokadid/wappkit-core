{
    "name": "antoniokadid/wapp-kit-core",
    "description": "The core of Web Application Kit (WAPPKit)",
    "type": "library",
    "authors": [
        {
            "name": "Antonio Kadid",
            "email": "antoniokadid@gmail.com",
            "homepage": "http://www.antoniokadid.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.3",
        "antoniokadid/wappkit-core-collections": ">=2.0",
        "antoniokadid/wappkit-core-graphics": ">=2.0",
        "antoniokadid/wappkit-core-mysql": ">=2.0",
        "antoniokadid/wappkit-core-text": ">=2.0",
        "antoniokadid/wappkit-core-http": ">=2.0",
        "antoniokadid/wappkit-core-io": ">=1.0",
        "antoniokadid/wappkit-core-audio": ">=1.0",
        "antoniokadid/wappkit-core-programmability": ">=1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9"
    },
    "autoload": {
        "psr-4": {
            "AntonioKadid\\WAPPKitCore\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AntonioKadid\\WAPPKitCore\\": "src/",
            "AntonioKadid\\WAPPKitCore\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --testdox tests"
    }
}
