{
    "name": "antoniokadid/wappkit-core",
    "description": "The core of Web Application Kit (WAPPKit)",
    "homepage": "https://github.com/antoniokadid/wappkit-core",
    "type": "library",
    "license": "MIT",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "keywords": [
        "wappkit"
    ],
    "authors": [
        {
            "name": "Antonio Kadid",
            "email": "antoniokadid@gmail.com",
            "homepage": "http://www.antoniokadid.com",
            "role": "Owner/Developer"
        }
    ],
    "require": {
        "php": ">=7.3",
        "ext-json": "*",
        "ext-gd": "*",
        "ext-mbstring": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3.5",
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpmd/phpmd" : "@stable",
        "phpcompatibility/php-compatibility": "^9.3"
    },
    "config": {
        "platform": {
            "php": "7.3.11"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "AntonioKadid\\WAPPKitCore\\": "src/"
        },
        "files": [
            "src/Localization/__.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "AntonioKadid\\WAPPKitCore\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --testdox --verbose tests",
        "translate": "php ./tools/generate-translations.php --input=src --output=locale --locales=el --clean-strings --clean-domains --clean-locales"
    }
}
